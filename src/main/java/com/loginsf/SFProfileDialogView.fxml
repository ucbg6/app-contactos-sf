<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="300.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.loginsf.SFProfileDialog">
   <children>
      <Label text="Name ">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TextField VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="2.0">
         <children>
            <Label text="Login URL">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ComboBox VBox.vgrow="ALWAYS" />
            <TextField>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label text="Username" />
            <TextField />
            <Label text="Password" />
            <TextField />
            <Label text="Security Token (required for new users)" />
            <TextField />
            <Label text="Client Secret" />
            <TextField />
            <Label text="Client ID" />
            <TextField />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" text="Test Connection" />
            <Button mnemonicParsing="false" text="Save" />
            <Button mnemonicParsing="false" style="-fx-background-color: darkred;" text="Delete" textFill="WHITE" />
         </children>
      </HBox>
      <Label text="Status" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
