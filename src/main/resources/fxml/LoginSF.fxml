<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="200.0" prefWidth="300.0" type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <ComboBox fx:id="pickProfile" prefWidth="200.0" promptText=" - Seleccionar -" HBox.hgrow="ALWAYS" />
                  <Button fx:id="edit" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Editar" textFill="#0062ff" underline="true" visible="false" />
               </children>
            </HBox>
            <Label fx:id="nameLabel" text="Perfil">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <PasswordField alignment="CENTER" maxWidth="-Infinity" prefWidth="200.0" promptText="Contraseña" />
            <Button fx:id="login" mnemonicParsing="false" text="Iniciar sesión" />
            <Label text="Estado" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</fx:root>
