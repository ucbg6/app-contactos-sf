<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="300.0" prefWidth="300.0" stylesheets="@styles.css" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="nuevo" mnemonicParsing="false" styleClass="sfbtn" text="Nueva Org.">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button fx:id="edit" disable="true" mnemonicParsing="false" styleClass="sfbtn" text="Editar">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button fx:id="delete" disable="true" mnemonicParsing="false" styleClass="sfbtn" text="Eliminar">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="orgList" prefHeight="200.0" prefWidth="200.0" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="importj" disable="true" mnemonicParsing="false" styleClass="sfbtn" text="Importar JSON">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button fx:id="exportj" disable="true" mnemonicParsing="false" styleClass="sfbtn" text="Exportar JSON">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="cancel" mnemonicParsing="false" styleClass="sfbtn" text="Cancelar" />
            <Button fx:id="save" mnemonicParsing="false" styleClass="sfbtn" text="Aceptar" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
   </children>
</fx:root>
